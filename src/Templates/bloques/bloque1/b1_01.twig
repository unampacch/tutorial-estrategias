                    <li class="page-item"><a class="page-link" href="{{base_path()}}bloques/el-cch/modelo-educativo">2</a></li>
                    <li class="page-item"><a class="page-link" href="{{base_path()}}bloques/el-cch/asignaturas-areas">3</a></li>
                    <li class="page-item"><a class="page-link" href="{{base_path()}}bloques/el-cch/modelo-educativo"><i class="fas fa-angle-double-right"></i></a></li>
                  </ul>
                </nav>
            </div>
        </div>
    </div>
{% endblock %}
