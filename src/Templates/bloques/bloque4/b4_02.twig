                    <li class="page-item"><a class="page-link" href="{{base_path()}}bloques/tic-aprender/trabajo-colaborativo"><i class="fas fa-angle-double-right"></i></a></li>
                  </ul>
                </nav>
            </div>
        </div>
    </div>


{% endblock %}
